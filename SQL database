drop table Location;
drop table Date;
drop table Category;
drop table Family;
drop table Equipments;
drop table Historic;

create table Location (
	location_id 	int not null auto_increment,
	name 		varchar(100) not null,
	department	varchar(100) not null,
	room		varchar(100) not null,
	primary key	(location_id)
);

create table Location (location_id int not null auto_increment,name varchar(100) not null,department varchar(100) not null,room varchar(100) not null,primary key (location_id));


create table Date (
	date_id		int not null auto_increment,
	year		int not null,
	month		int not null,
	day		int not null,
	primary key	(date_id)
);

create table Date (date_id int not null auto_increment,year int not null,month int not null,day int not null,primary key(date_id));



create table Category (
	category_id	int not null auto_increment,
	name		varchar(100) not null,
	primary key 	(category_id)
);

create table Category (category_id int not null auto_increment,name varchar(100) not null,primary key(category_id));


create table Family (
	family_id	int not null auto_increment,
	name		varchar(100) not null,
	primary key	(familly_id)
);

create table Family (family_id int not null auto_increment,name varchar(100) not null,primary key(family_id));



create table Equipments (
	equipments_id	int not null auto_increment,
	id_location	int references Location (location_id) on delete cascade on update cascade,
	id_family	int references Family (family_id) on delete cascade on update cascade,
	id_category	int references Category (category_id) on delete cascade on update cascade,
	id_date		int references Date (date_id) on delete cascade on update cascade,
	code		varchar(100) not null,
	status		varchar(100) not null,
	primary key 	(equipments_id)
);

create table Equipments (equipments_id int not null auto_increment,id_location int references Location (location_id) on delete cascade on update cascade,id_family int references Family (family_id) on delete cascade on update cascade,id_category int references Category (category_id) on delete cascade on update cascade,id_date int references Date (date_id) on delete cascade on update cascade,code varchar(100) not null,status varchar(100) not null,primary key(equipments_id));



create table Historic (
	historic_id	int not null auto_increment,
	id_location	int references Location (location_id) on delete cascade on update cascade,
	id_family	int references Family (family_id) on delete cascade on update cascade,
	id_category	int references Category (category_id) on delete cascade on update cascade,
	id_date		int references Date (date_id) on delete cascade on update cascade,
	code		varchar(100) not null,
	status		varchar(100) not null,
	primary key 	(historic_id)
);

create table Historic (historic_id int not null auto_increment,id_location int references Location (location_id) on delete cascade on update cascade,id_family int references Family (family_id) on delete cascade on update cascade,id_category int references Category (category_id) on delete cascade on update cascade,id_date int references Date (date_id) on delete cascade on update cascade,code varchar(100) not null,status varchar(100) not null,primary key (historic_id));





	
